#include<iostream>
#include<iomanip>
#include <string.h>
#include <stdlib.h>
using namespace std;
class emp {
    
    public:
    
    //Properties:
    double day_rate =205.50;
    int emp_no;
    int hours;
    
    //Get employee info
    int getInfo()
    {
        cout<<"Enter Employee No : "<<"\n";
        cin>>emp_no; cin.ignore();
        int Emp_no = emp_no;
        return(Emp_no);
    }
};

class salary :public emp{
    //Employee Salary
    public:
    
    double getSalary()
    {
        cout<<"Enter No of hours worked : "<<"\n";
        cin>>hours; cin.ignore();
        int Hours = hours;
        
        double gross_pay;
        gross_pay = this->day_rate*Hours;
        
        return(gross_pay);
    }
    
    double Netsalary()
    {
        double gross =getSalary()-100;
        return (gross);
        
    }
};

int main()
    {
    string emp_name;
    
    cout<<"Enter Employee Name : "<<"\n";
    cin>>emp_name; cin.ignore();
    string Emp_name =emp_name;
    
    emp Worker;
    salary Rate;
    
    if(Worker.getInfo()<200){
        
    }else if(Worker.getInfo()<300){
        
    }else if(Worker.getInfo()<400){
        
    }else{
        
    };
    
    Rate.getSalary();
    
    cout<<setw(7)<<"Employee Name :"<<setw(14)<<"Employee No :"<<setw(21)<<"Gross Salary :"<<setw(28)<<"Net Salary :"<<endl;
    cout<<setw(7)<<Emp_name<<setw(14)<<Worker.getInfo()<<setw(21)<<Rate.getSalary()<<setw(28)<<Rate.Netsalary()<<endl;

return 0;
}

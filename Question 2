#include <iostream>

using namespace std;

int userfeed(int x){
    
    int Car;
    int Hours;
    double Charge=12.00;
    double extra_Charge;
    double max_Charge;
    for(int i=0;i<x;i++){
        
        while(1){
        
            cout<<"Enter The Car no:\n Enter hours in that order\n:";
            cin>>Car>>Hours; cin.ignore();
            
            if(Hours>3){
                
                double extra_Charge = Charge+(0.90*Hours);
                cin>>extra_Charge; cin.ignore();
                
            }else if(Hours>25){
                
                double max_Charge=20;
                cin>>max_Charge; cin.ignore();
            
                
            }else{
                    cin>>Charge; cin.ignore();
            };
        };
        cout<<"Car:"<<" "<<"Hours:"<<" "<<"Rate per hour:"<<"\n"
        <<Car<<"    "<<Hours<<"      "<<extra_Charge<<max_Charge<<Charge<<endl;
    
        break;    
    };
    
    return 0;
}
int main()
{
    userfeed(3);
    return 0;
}


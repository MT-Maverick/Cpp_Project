#include <iostream>
#include <iomanip>
using namespace std;

    
int reduce(int num, int denom){
    
    int HCF = denom % num ; 
    
    int factored_top_value = num/HCF;
    int factored_bottom_value = denom/HCF;

    if( HCF>0){
        
    cout<<setw(15)<<"Factored Exprssion : "<<setw(4)<<factored_top_value<<"/"<<factored_bottom_value<<"\n"<<setw(15)<<"Highs Common Factor : "<<setw(4)<<HCF;
    };
    
return 0;
}

int main(){
    
    int num,denom;
    int object_array[2];
    
    cout <<"enter numerator: \n";
    cin>>num; cin.ignore();
    object_array[0] = num;

    cout <<"enter denominator: \n";
    cin>>denom; cin.ignore();
    object_array[1] = denom;
    
    reduce(object_array[0],object_array[1]);
    return 0;
}
